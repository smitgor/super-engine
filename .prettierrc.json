{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "tabWidth": 2,
                "parser": "html"
            }
        },
        {
            "files": "*.{css,scss,less,sss}",
            "options": {
                "tabWidth": 4,
                "semi": true,
                "bracketSpacing": false
            }
        }
    ]
}
